<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 포인트 표시 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textCurrentPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_credit_timer"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:fontFamily="monospace"
                    android:importantForAccessibility="no" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 차단된 앱 목록 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blocked_apps"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:importantForAccessibility="no" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBlockedApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- 앱 추가 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_app"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_input_add"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:importantForAccessibility="no" />

        <!-- 페르소나 선택 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/persona_selection"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_menu_manage"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:importantForAccessibility="no" />

        <!-- 엄격모드 섹션 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/strict_mode_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textStrictModeStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strict_mode_inactive"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEnableStrictMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strict_mode_enable"
                    android:textSize="16sp"
                    app:icon="@android:drawable/ic_lock_lock"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEmergencyExit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strict_mode_emergency_exit"
                    android:textSize="16sp"
                    app:icon="@android:drawable/ic_menu_close_clear_cancel"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
